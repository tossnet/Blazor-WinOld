@namespace Blazor.WinOld.Components

@inherits WinOldComponentBase

@typeparam T

<div>
	<input type="radio" 
		   id="@ElementId"
		   role="radio" 
		   name="@Group.GroupId"
		   checked="@IsChecked"
		   @onchange="OnChange"
		   disabled="@(ParentDisabled | Disabled)"
		   class="opt-win @GetComponentClass()">
	<label for="@ElementId">@Label</label>
</div>