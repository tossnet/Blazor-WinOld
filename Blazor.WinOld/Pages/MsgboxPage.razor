@page "/msgboxpage"

@inject IDialogService DialogService

<PageTitle>Home</PageTitle>

<h1>MsgboxPage</h1>

<p>one day I'll have to make a page for each component...</p>

<WinOldButton OnClick="ClickMe"
			  Appearance="Appearance.WinXP">Show MessageBox bizearre</WinOldButton>



@code {
	Appearance appearance { get; set; } = Appearance.Win7;

	async Task ClickMe()
	{
		var options = new DialogOptions
			{
				Appearance = Appearance.WinXP,
				Title = "Warning",
				Message = "Blazor is awesome!",
				Icon = Icon.Information,
				OkButtonText = "OK",
				CancelButtonText = ""
			};
		var DialogResult = await DialogService.ShowMessageBox(options);
	}
}
