@page "/msgboxpage"

@inject IDialogService DialogService

<PageTitle>MessageBox</PageTitle>

<h1>MessageBox</h1>


<div style="display:flex; flex-direction: row; gap: 10px;">
	<WinOldButton OnClick="() => ClickMe(Appearance.Win98)"
				  Appearance="Appearance.Win98">Show MessageBox 98</WinOldButton>

	<WinOldButton OnClick="() => ClickMe(Appearance.WinXP)"
				  Appearance="Appearance.WinXP">Show MessageBox XP</WinOldButton>

	<WinOldButton OnClick="() => ClickMe(Appearance.Win7)"
				  Appearance="Appearance.Win7">Show MessageBox 7</WinOldButton>
</div>



<CodeBlock Language="CodeLanguage.Razor"
		   EnableLineNumbers="true"
		   Code=@(@"
	<WinOldButton OnClick=""ClickMe""
	              Appearance=""Appearance.WinXP"">
	  Show MessageBox
	</WinOldButton>
		   	 ") />

<CodeBlock Language="CodeLanguage.CSharp"
		   EnableLineNumbers="true"  
		   Code=@(@"
   
	private async Task ClickMe()
	{
		var options = new DialogOptions
		{
			Appearance = Appearance.WinXP,
			Title = ""Warning"",
			Message = ""Blazor is awesome!"",
			Icon = Icon.Information,
			OkButtonText = ""OK"",
			CancelButtonText = """"
		};
		var DialogResult = await DialogService.ShowMessageBox(options);
	}
")/>


@code {
	Appearance appearance { get; set; } = Appearance.Win7;

	async Task ClickMe(Appearance appearance)
	{
		var options = new DialogOptions
		{
			Appearance = appearance,
			Title = "Warning",
			Message = "Blazor is awesome!",
			Icon = Icon.Information,
			OkButtonText = "OK",
			CancelButtonText = ""
		};
		var DialogResult = await DialogService.ShowMessageBox(options);
	}
}
