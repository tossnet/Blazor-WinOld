@page "/"

@inject IDialogService DialogService

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>


<WinOldSelect Appearance="appearance"
			  T="Appearance"
			  @bind-Value="appearance">
	<WinOldOption Value="Appearance.WinXP">Win XP</WinOldOption>
	<WinOldOption Value="Appearance.Win98">Win 98</WinOldOption>
	<WinOldOption Value="Appearance.Win7">Win 7</WinOldOption>
</WinOldSelect>



<WinOldCheckBox Appearance="appearance"
				Label="Disable this frame :"
				CheckedChanged="@disabledXPFrame" />

<WinOldFrame Appearance="appearance"
			 Label="Frame"
			 Disabled="disabledXP">
	<WinOldTextBox Appearance="appearance"
				   Label="Textbox :"
				   @bind-Value="SelectRadioString" />

	<WinOldLabel Appearance="appearance">
		Label : @SelectedRadio.ToString()
	</WinOldLabel>

	<WinOldButton OnClick="ClickMe"
				  Appearance="appearance">Click me</WinOldButton>

	<WinOldOptionButtonGroup T="int"
							 @bind-Value="SelectedRadio"
							 Appearance="appearance">
		<WinOldOptionButton Label="Adrien" Value="1" />
		<WinOldOptionButton Label="Christophe" Value="2" />
		<WinOldOptionButton Label="Denis" Value="3" />
	</WinOldOptionButtonGroup>
</WinOldFrame>


<WinOldTabs Appearance="appearance"
			Style="max-width: 500px">
	<WinOldTabPanel Label="Tab A">
		<p>Contents of first tab</p>
	</WinOldTabPanel>

	<WinOldTabPanel Label="Tab B" IsDefault="true">
		<p>Contents of second tab</p>
	</WinOldTabPanel>

	<WinOldTabPanel Label="MessageBox">
		<WinOldFrame Appearance="appearance"
			 Label="Icon"
			 Disabled="disabledXP">
			<WinOldOptionButtonGroup T="Icon"
									 @bind-Value="iconMessage"
									 Appearance="appearance">
				<WinOldOptionButton Label="None" Value="Icon.None" />
				<WinOldOptionButton Label="Alert" Value="Icon.Alert" />
				<WinOldOptionButton Label="Critical" Value="Icon.Critical" />
				<WinOldOptionButton Label="Information" Value="Icon.Information" />
				<WinOldOptionButton Label="Question" Value="Icon.Question" />
			</WinOldOptionButtonGroup>
		</WinOldFrame>
	</WinOldTabPanel>
</WinOldTabs>

<WinOldListBox Appearance="appearance"
			   @bind-SelectedValue="SelectedValue"
			   Style="max-width: 200px;max-height:100px;overflow-y: scroll;">
	<WinOldListBoxItem Text="The dog" Value="doc" />
	<WinOldListBoxItem Text="The cat" Value="cat" />
	<WinOldListBoxItem Text="The Bird" Value="bird" />
	<WinOldListBoxItem Text="The pork" Value="pork" />
	<WinOldListBoxItem Text="The rabbit" Value="rabbit" />
	<WinOldListBoxItem Text="The beautiful lion" Value="lion" />
	<WinOldListBoxItem Text="The whale" Value="whale" />
</WinOldListBox>

<WinOldLabel Appearance="appearance">
	Selected Value: @SelectedValue
</WinOldLabel>

<h2 class="py-3">MessageBox</h2>

<WinOldButton OnClick="ClickMe"
Appearance="Appearance.WinXP">Click me</WinOldButton>

<WinOldButton OnClick="ClickMe"
Appearance="Appearance.WinXP"
Disabled>Click me</WinOldButton>

